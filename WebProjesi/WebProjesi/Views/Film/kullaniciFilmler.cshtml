@model IEnumerable<WebProjesi.Models.Film>
@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_Layout.cshtml";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-3  ">
            <input type="submit" value="Filmler Listesi" class="btn buton btn-dark" disabled />

        </div>
        <div class="col-6 text-right">
            
        </div>
    </div>
    <br />


    <div class="card-group">
        @foreach (var i in Model)
        {
            <div class="col-sm-4">
                <div class="card">
                    <img src="https://www.arthipo.com/image/cache/catalog/poster/movie/1-758/pfilm117-the-amazing-spider-man-orumcek-adam-posteri-500x500w.jpg" class="kartresim card-img " alt="...">
                    <div class="card-body ">
                        <a asp-action="Details" asp-controller="film" asp-route-Id="@i.Id" class="card-title text-light">@i.filmIsmi</a>
                        <p class="card-text text-light">@i.filmAciklamasi</p>
                        <br />
                        <div>
                            <a asp-controller="Film" asp-action="KatalogEkle" asp-route-Id="@i.Id" class="btn btn-dark  text-white">Kataloğa Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        }
    </div>


</div>
